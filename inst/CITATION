# CITATION file for the CCI package

citation <- function() {
  # Use the package name and version
  pkg <- "CCI"
  ver <- utils::packageVersion(pkg)

  # Provide citation information
  cat("To cite the CCI package in publications, please use:\n\n")
  cat("  Thorjussen, C.B.H., & Liland, K.H. (2024). Computational Test for Conditional Independence (CCI).\n")
  cat("  R package version ", ver, ".\n")
  cat("  Available from: https://github.com/khliland/CCI\n\n")

  cat("A BibTeX entry for LaTeX users is:\n\n")
  cat("@Manual{,\n")
  cat("  title = {Computational Test for Conditional Independence (CCI)},\n")
  cat("  author = {Christian B. H. Thorjussen and Kristian Hovde Liland},\n")
  cat("  year = {2024},\n")
  cat("  note = {R package version ", ver, "},\n", sep = "")
  cat("  url = {https://github.com/khliland/CCI},\n")
  cat("}\n")
}
